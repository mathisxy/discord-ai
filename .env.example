# ============================================
# üîß General Configuration
# ============================================

# Logging level: DEBUG | INFO | WARNING | ERROR | CRITICAL
LOGLEVEL=INFO

# Bot name
NAME=Emanuel

# Optional: Custom instructions or behavior hints. Available Placeholders: [#NAME], [#DISCORD_ID], [#CURRENT_DATE]
INSTRUCTIONS="You are [#NAME]! Your Discord ID is <@[#DISCORD_ID]>. Today is [#CURRENT_DATE]."

# Interface language: en or de
LANGUAGE=en

# Timezone for the message timestamps for the ai
TIMEZONE=Europe/Berlin

DOWNLOAD_FOLDER=downloads

# ============================================
# ü§ñ Discord Integration
# ============================================

# Discord bot token (get this from https://discord.com/developers/applications)
DISCORD_TOKEN=#YOUR_DISCORD_TOKEN_HERE

# Discord bot ID (can also be found here https://discord.com/developers/applications)
DISCORD_ID=#123456789123456789

# Optional: Path to a CSV file with additional user data (e.g. usernames.csv)
# Must include a "Discord ID" column; other columns (e.g. Discord, Name, Minecraft, Email) are merged automatically.
USERNAMES_PATH=

# ============================================
# üß† AI Provider Settings
# ============================================

# Choose between "mistral", "azure" or "ollama"
AI=

# --- Mistral ---
MISTRAL_API_KEY=#YOUR_MISTRAL_API_KEY_HERE
MISTRAL_MODEL=mistral-medium-latest
# Enable if using a model that supports vision (true/false)
MISTRAL_IMAGE_MODEL=true
# Image mimetypes in CSV-Format
MISTRAL_IMAGE_MODEL_TYPES=image/jpeg,image/png,image/webp,image/gif

# --- Azure ---
AZURE_OPENAI_API_KEY=#YOUR_AZURE_OPENAI_API_KEY_HERE
AZURE_OPENAI_API_VERSION=2024-10-21
AZURE_OPENAI_ENDPOINT=https://<YOUR_AZURE_OPENAI_RESOURCE_HERE>.services.ai.azure.com
AZURE_OPENAI_MODEL=gpt-5-mini
# Enable if using a model that supports vision (true/false)
AZURE_OPENAI_IMAGE_MODEL=true
# Image mimetypes in CSV-Format
AZURE_OPENAI_IMAGE_MODEL_TYPES=image/jpeg,image/png,image/webp

# --- Gemini ---
GEMINI_API_KEY=#YOUR_GEMINI_API_KEY_HERE
# Endpoint does not need to be changed
GEMINI_ENDPOINT=https://generativelanguage.googleapis.com/v1beta/openai/
GEMINI_MODEL=gemini-2.5-flash
# Enable if using a model that supports vision (true/false)
GEMINI_IMAGE_MODEL=true
# Image mimetypes in CSV-Format
GEMINI_IMAGE_MODEL_TYPES=image/jpeg,image/png,image/webp,image/heic,image/heif

# --- Open AI ---
OPENAI_API_KEY=#YOUR_OPENAI_API_KEY_HERE
OPENAI_MODEL=gpt-5-nano
# Enable if using a model that supports vision (true/false)
OPENAI_IMAGE_MODEL=true
# Image mimetypes in CSV-Format
OPENAI_IMAGE_MODEL_TYPES=image/jpeg,image/png,image/webp,image/gif

# --- Ollama ---
OLLAMA_URL=http://localhost:11434
OLLAMA_MODEL=gemma3:12b
OLLAMA_MODEL_TEMPERATURE=
OLLAMA_KEEP_ALIVE=0s
OLLAMA_TIMEOUT=300
# Enable if using a model that supports vision (true/false)
OLLAMA_IMAGE_MODEL=false
# Image mimetypes in CSV-Format
OLLAMA_IMAGE_MODEL_TYPES=image/jpeg,image/png
# Only works with supported nvidia drivers
OLLAMA_REQUIRED_VRAM_IN_GB=11
OLLAMA_WAIT_FOR_REQUIRED_VRAM=30s

# ============================================
# üß∞ MCP / Tool Integration
# ============================================

# Optional: MCP server endpoint (e.g. http://localhost:8001/mcp)
MCP_SERVER_URL=

# MCP integration class
MCP_INTEGRATION_CLASS=MultimediaMCPIntegration

# Enable if the model supports tool calling natively (true/false)
# If disabled the tool calls are written in the message itself
TOOL_INTEGRATION=false

# Used by MultimediaMCPIntegration:
# If set, a comma-separated list of MCP tool tags used to filter the available tools (e.g. Image,Audio,Default)
MCP_TOOL_TAGS=

# Maximum number of consecutive tool call rounds.
# Once this limit is reached, the LLM will not be invoked again.
MAX_TOOL_CALLS=7

# Optional: Discord user ID to notify (mention) when a MCP or Tool Call error occurs.
# Only called when the user can be found in the channel members
# If not set, errors are handled internally.
MCP_ERROR_HELP_DISCORD_ID=

# ============================================
# ‚öôÔ∏è Limits & Performance
# ============================================

# Maximum tokens per model response
MAX_TOKENS=64000

# Maximum number of initially stored messages in context
MAX_MESSAGE_COUNT=15

# Total size of Discord History to search for valid messages to include in context
TOTAL_MESSAGE_SEARCH_COUNT=30

# ============================================
# üîÑ Conversation History
# ============================================

# Text that resets the conversation history
HISTORY_RESET_TEXT="üò∂‚Äçüå´Ô∏èüò∂‚Äçüå´Ô∏èüò∂‚Äçüå´Ô∏è"

